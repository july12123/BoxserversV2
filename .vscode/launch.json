    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Script",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std",
            "program": "${workspaceFolder}\\Script\\index.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Web",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\web",
            "outputCapture": "std",
            "program": "${workspaceFolder}\\Web\\index.js"
        }
    ]
}